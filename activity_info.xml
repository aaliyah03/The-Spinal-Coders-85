<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity"
    android:background="@drawable/beebg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:text="Welcome!\n Before we get started we'd like you to answer a few simple questions"
        android:textSize="24sp"
        android:layout_column="0"
        android:layout_row="0"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_margin="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/gridly">

    <TextView
        android:id="@+id/nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:layout_column="0"
        android:layout_row="1"

        />

    <EditText
        android:id="@+id/nameedt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_column="1"
        android:layout_row="1"
         />

    <TextView
        android:id="@+id/agetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: "
        android:textSize="18sp"
        android:layout_column="0"
        android:layout_row="2"
        />

    <EditText
        android:id="@+id/ageedt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        android:layout_column="1"
        android:layout_row="2"
        />

    <TextView
        android:id="@+id/gendertxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: "
        android:textSize="18sp"
        android:layout_column="0"
        android:layout_row="3"

        />

    <EditText
        android:id="@+id/genderedt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Gender"
        android:inputType="text"
        android:layout_column="1"
        android:layout_row="3"
        />

    <TextView
        android:id="@+id/emailtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="18sp"
        android:layout_column="0"
        android:layout_row="4"

        />

    <EditText
        android:id="@+id/emailedt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_column="1"
        android:layout_row="4"
        />

    <TextView
        android:id="@+id/phonetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:textSize="18sp"
        android:layout_column="0"
        android:layout_row="5"

        />

    <EditText
        android:id="@+id/phoneedt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:layout_column="1"
        android:layout_row="5"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/countrytxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where are you from? "
        android:textSize="18sp"
        android:layout_column="0"
        android:layout_row="6"
        />

    <Spinner
        android:layout_marginTop="5dp"
        android:id="@+id/countryspn"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="6"
         />
    </GridLayout>

    <Button
        android:id="@+id/submitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridly"
        android:layout_centerHorizontal="true"
        android:text="Submit" />
</RelativeLayout>