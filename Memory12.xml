<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".market">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="We have reached the market! What do we buy?"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="330dp"
        android:layout_height="102dp"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:onClick="f1"
        android:text="Sandalwood, Fruits and seeds"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="330dp"
        android:layout_height="102dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/button2"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:onClick="f2"
        android:text="Seeds, Fertilizers and Water can" />

    <Button
        android:id="@+id/button4"
        android:layout_width="330dp"
        android:layout_height="102dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/button3"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:onClick="f3"
        android:text="Clay Pots, Seeds and Water can" />


</RelativeLayout>
